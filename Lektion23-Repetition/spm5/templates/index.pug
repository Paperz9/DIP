doctype html
html
    head
        title Express-app 3
    body
        h1 Kontakter
        ul#contacts-list
        each contact in contacts 
            li= `${contact.name} - ${contact.phone}`
            a(href=`/update/${contact.id}`) Opdater nummer
        h2 Tilføj ny kontakt
        form(action='/add', method='post')
            input(type='text', name='name', placeholder='Navn', required)
            input(type='text', name='phone', placeholder='Telefonnummer', required)
            button(type='submit') Tilføj kontakt
        script(src='index.js') // Inkludér index.js til at håndtere interaktioner
